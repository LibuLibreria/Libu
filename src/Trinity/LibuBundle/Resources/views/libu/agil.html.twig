        <p></p>Balda:  <br><input id="balda" type="text" name="balda" value= "3">
        <br>ISBN:  <br><input id="isbn" type="text" name="isbn" value=" " autofocus/>
          <br>
        <input id="submit" type="submit" value="Submit">

{{ form_end(form) }}


