<script type="text/javascript">

    function autofocusIsbn() {
        libro_corto_isbn.focus(); 
    }

</script>




<div class="book-wrapper" >

    <div class="col-md-10">

        <div id="texto_inicial">
            {{ texto }}
        </div>

        <div id="cabecera"><h1>Nuevo libro: </h1></div>

            {{ form_start(form) }}


            <div class="col-md-6">

                <div class="col-md-6">

                    {{ form_row(form.codigo) }} 

                    <div  onclick="autofocusIsbn()">
                        {{ form_row(form.tapas) }}   
                    </div>

                </div>

                <div class="col-md-6" onclick="autofocusIsbn()">

                    {{ form_row(form.conservacion) }}  

                </div>

                {{ form_row(form.isbn) }}

                {{ form_row(form.descripcion) }}                

                {{ form_row(form.subiragil) }}  

            </div>

            <div class="col-md-3">
             
                {{ form_row(form.estanteria) }}    

                {{ form_row(form.balda) }}                

                {{ form_row(form.notas) }}   
        
                {{ form_end(form) }}

                <div class="botones_agil">
                <a  href= "{{ path('bookbaldaestant')}}">Cambiar balda y estanter√≠a</a><br>   
                </div>

                <div class="botones_agil">
                <a href= "{{ path('bookenviajson')}}">Enviar documento</a><br>
                </div>
                
            </div>

    </div>







</div>

