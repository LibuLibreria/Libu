{% extends "LibuBundle::libu/tabla_layout.html.twig" %}


    	{% block titulo %}
	    	<h1>Listado por proveedor</h1>
	    	<h3>Mes: {{ fecha  }}</h3>
	    	<h3>Proveedor: {{ proveedor.nombre  }}</h3>
    	{% endblock %}


		{% block cabecera %}
			<th>Factura</th><th>DÃ­a</th><th>Producto</th><th>Cantidad</th><th>Precio</th><th>Ingreso</th>
		{% endblock %}



		{% block contenido %}
		    {% for vent in ventasmes.ventas %}
		    	<tr>
		    		<td>{{ vent.factura }}</td>
		        	<td>{{ vent['diahora'] | localizeddate('full', 'none', app.request.locale ) }}</td>
		        	<td>{{ vent.producto }}</td>
		        	<td>{{ vent.cantidad }}</td>
		        	<td>{{ vent.precio | round(1,'common') }} euros</td>
		        	<td>{{ vent['ingreso']  |round(1,'common') }} euros</td>
	        	</tr>
		    {% endfor %}

		    <tr>
		    	<td><b> Total:</b></td><td></td><td></td><td></td><td></td>
		    	<td><b> {{ ventasmes.ingreso  |round(1,'common') }} euros</b></td>
		    </tr>
    	{% endblock %}		    


		{% block formulario %}
		    {{ form_start(form) }}
		        <div>
		            {{ form_errors(form.provs) }}
		            {{ form_widget(form.provs) }}        	
		            {{ form_errors(form.mesesventas) }}
		            {{ form_widget(form.mesesventas) }}
		            {{ form_widget(form.fecha) }}
		        </div>

	        	<p>&nbsp;</p>

		        <div>
		            {{ form_widget(form.menu, {'attr': {'class':'btn btn-danger .btn-block  btn-lg'}} ) }}
		        </div>

		    	{{ form_row(form._token) }}
		    {{ form_end(form)}}   
    	{% endblock %}		    

