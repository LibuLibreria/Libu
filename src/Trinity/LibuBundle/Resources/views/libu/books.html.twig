{% extends "LibuBundle::libu/base.html.twig" %}

{#    {% form_theme form 'bootstrap_3_layout.html.twig' %}   #}

{% block body %}
  <div class="row">
		<div class="col-md-12">
      <h4>{{ titulo }}</h4>
      <div class="table-responsive">
        <table id="mytable" class="table table-bordred table-striped">

          {% if lista.ceroerr ==  false %}

            <tbody>
              <strong>SE HAN ENCONTRADO VARIOS ERRORES EN EL ARCHIVO, QUE SE DETALLAN A CONTINUACIÓN</strong>
              <br>Por favor, corrija el archivo y vuelva al <a href= "{{ path('bookcsv')}}">formulario para archivos csv</a>
              {% for errorent in lista.erroresent %}
                <tr style = "background-color: red;">
                  <hr><strong>ERROR EN EL LIBRO CON CÓDIGO: {{ errorent.libro.codigo }}</strong><br>
                  se ha reportado el siguiente error: <br>
                  {{ errorent.error }}<br>
                  <hr>
                </tr>
              {% endfor %}

              {% for errorcol in lista.errorescol %}
              <hr>
              <tr><strong>ERROR EN LIBRO CON CÓDIGO: {{ errorcol.arraylibro.codigo }}</strong><br>Con estos datos: <br></tr>
                {% for columna, valor in errorcol.arraylibro %}
                  <tr>
                    {{ columna }}: {{ valor }}<br>
                  </tr>
                {% endfor %}
                <tr><strong>Se han encontrado los siguientes errores:<br></strong> </tr>
                {% for col, err in errorcol.errores %}
                  <tr>{{ col }}: {{ err.texto }} <br> </tr>
                {% endfor %}
              <hr>
              {% endfor %}
            </tbody>

          {% else %}

            <strong>No se han encontrado errores</strong>
            <br>Ahora debería subir los archivos a la base de datos y a la plataforma online
            {% if cabecera is defined %}
              <thead>
                <tr>
                  <th><input type="checkbox" id="checkall" /></th>
                  {% for cab in cabecera %}
                      <th> {{ cab }}</th>
                  {% endfor %}
                </tr>
              </thead>
            {% endif %}

            <tbody>
              {{ form(form) }}

              {% for libro in lista.arraylibros %}    
                <tr>
                  <td><input type="checkbox" class="checkthis" /></td>
                  <td>{{ libro.isbn }}</td>
                  <td>{{ libro.codigo }}</td>
                  <td>{{ libro.titulo }}</td>
                  <td>{{ libro.autor }}</td>
                  <td>{{ libro.precio }}</td>
                  <td><p data-placement="top" data-toggle="tooltip" title="Editar"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit" ><span class="glyphicon glyphicon-pencil"></span></button></p></td>
                  <td><p data-placement="top" data-toggle="tooltip" title="Borrar"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" ><span class="glyphicon glyphicon-trash"></span></button></p></td>
                </tr>
              {% endfor %}      
            </tbody>      

          {% endif %}

        </table>

        {#
          <div class="clearfix"></div>
          <ul class="pagination pull-right">
            <li class="disabled"><a href="#"><span class="glyphicon glyphicon-chevron-left"></span></a></li>
            <li class="active"><a href="#">1</a></li>
            <li><a href="#">2</a></li>
