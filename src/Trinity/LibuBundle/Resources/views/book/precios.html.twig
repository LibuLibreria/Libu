{% extends "LibuBundle::libu/base.html.twig" %}
{# libu/Resources/views/libu/venta.html.twig #}


{% block body %}
    <div class="clearfix">

		{% if texto_previo is defined %}
			{{ texto_previo | raw}}
		{% endif %}

		{% if titulo is defined %}
			<h2>{{ titulo | raw}}</h2>
		{% endif %}

		<p>Estos son los libros pendientes de poner precio</p>
		<p>Pulsar Aceptar para comenzar la serie</p>

		{% if lista is defined %}
			<h1></h1>
			<ul class="list-group">
		    	{% for item in lista %}
		      	  <li>{{ item | raw }}</li>
		    	{% endfor %}
			</ul>		    
		{% endif %}

		{% if tabla is defined %}
			<table class="table table-striped  table-condensed">
			  <thead>
			    <tr>
			    	{% for cab in cabecera %}
			      		<th> {{ cab }}</th>
		      		{% endfor %}
			    </tr>
			  </thead>
			  <tbody>
			  	{% for linea in tabla %}
			    <tr>
			      		<td>{{ linea.codigo }}</td>
			      		<td>{{ linea.isbn }}</td>
			    </tr>
			    {% endfor %}
			  </tbody>
			</table>
		{% endif%}

		{% if form is defined %}
			<div class = 'formulario'>
				<div class = 'col-sm-3 form'>
			        {{ form(form) }}
			    </div>
		    </div>
	    {% endif %}
    </div>
{% endblock %}