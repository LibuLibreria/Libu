{% extends "LibuBundle::libu/navbar.html.twig" %}
{# libu/Resources/views/libu/venta.html.twig #}


{% block body %}
    <div class="clearfix">

		{% if titulo is defined %}
			<h2>{{ titulo | raw}}</h2>
		{% endif %}

		{% if texto_previo is defined %}
			{{ texto_previo | raw}}
		{% endif %}


		{% if lista is defined %}
			<h1></h1>
			<ul class="list-group">
		    	{% for item in lista %}
		      	  <li>{{ item | raw }}</li>
		    	{% endfor %}
			</ul>		    
		{% endif %}

		{% if tabla is defined %}
		
			<table class="table table-striped  table-condensed">
			  <thead>
			    <tr>
			    	{% for cab in cabecera %}
			      		<th> {{ cab }}</th>
		      		{% endfor %}
			    </tr>
			  </thead>
			  <tbody>
			  	{% for linea in tabla %}
			    <tr>
		    	{% if accion == 'agil' %}
		      		<td><a href="{{ path('booklibro', {'cod': linea.codigo, 'accion': accion } ) }}">{{ linea.codigo }}</a></td>
	      		{% elseif accion == 'precio' %}
					<td><a href="{{ path('booklibro', {'cod': linea.codigo, 'accion': accion } ) }}">{{ linea.codigo }}</a></td>	   
	      		{% else %}
					<td><a href="{{ path('booklibro', {'cod': linea.codigo, 'accion': accion } ) }}">{{ linea.codigo }}</a></td>	
	      		{% endif %}
	      			<td>{{ linea.estatus }}</td>
	      			<td>{{ linea.refabebooks }}</td>
		      		<td>{{ linea.isbn }}</td>
		      		<td>{{ linea.tapas }}</td>
		      		<td>{{ linea.conservacion }}</td>
		      		<td>{{ linea.estanteria }}</td>
		      		<td>{{ linea.balda }}</td>
			    </tr>
			    {% endfor %}
			  </tbody>
			</table>
		{% endif%}

		{% if form is defined %}
			<div class = 'formulario'>
				<div class = 'col-sm-3 form'>
			        {{ form(form) }}
			    </div>
		    </div>
	    {% endif %}

		{% if boton_final is defined %}
			<p></p>
			<a href="{{ path( path_boton_final )}}" class="btn btn-info" role="button">{{ boton_final | raw}}</a>			
		{% endif %}

    </div>
{% endblock %}