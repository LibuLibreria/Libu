{% extends "LibuBundle::libu/base.html.twig" %}

{#    {% form_theme form 'bootstrap_3_layout.html.twig' %}   #}

{% block body %}

    <h2>Pedidos: </h2>

    {% if numpedidos > 0 %}

        <br><strong>Numero de pedidos: {{ numpedidos }} </strong>
        <br>-----------------------------

        {% for numped, pedido in datospedido %}

            <br><h3>Pedido {{ numped }}</h3>
            <br>Id. del pedido: {{ pedido.idpedido }}

            {% if pedido.purchaseMethod != 'CC' %}
                <br>ATENCIÓN: LIBRO NO COBRADO AUTOMÁTICAMENTE
            {% endif %}

            <br>Comprador/a: {{ pedido.comprador.name }}
            <br>Email: {{ pedido.direccionmail }}
            {% if pedido.comprador.country != 'Spain' %}
                <br><br>ATENCIÓN: LIBRO COMPRADO DESDE EL EXTRANJERO
            {% endif %}

            <br>-----------------------------

            <br><strong>En el pedido hay {{ pedido.numlibrospedido }} libro/s</strong>

            {% for numlib, libro in pedido.libro %}

                <br>Identificador del libro: {{ libro.vendorKey }}
                <br>Autor: {{ libro.author }}
                <br>Título: {{ libro.title }}
                <br>ISBN: {{ libro.isbn }}

                {% if libro.codigo is defined %}
                    <br>Precio: {{ libro.precio }}
                    <br>Estantería: {{ libro.estanteria }}
                    <br>Balda: {{ libro.balda }}
                    <br>Código: {{ libro.codigo }}
                    <br><a href="{{ path('delete_abebooks', {'id': libro.vendorKey, 'order': libro.orden }) }}" target="_blank"  class="btn btn-info" role="button" >Subir</a>   
                    {# <br><a href='https://www.abebooks.com/servlet/OrderUpdate?abepoid= {{ libro.orden }}' target="_blank"  class="btn btn-info" role="button">Vender en Abebooks</a> #}
                {% else  %}
                    <br><strong>No se ha encontrado un libro con referencia {{ libro.vendorKey }}.
                    <br>No se puede proceder a la venta. Avisar al administrador de Trinity </strong>
                {% endif %}


            {% endfor %}
            <br>-----------------------------

        {% endfor %}

    {% else %}

        <br>No hay ningún pedido

    {% endif %}



{% endblock %}   