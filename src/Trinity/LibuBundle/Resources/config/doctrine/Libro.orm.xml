<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Trinity\LibuBundle\Entity\Libro" table="libro"  repository-class="Trinity\LibuBundle\Repository\LibroRepository">
    <indexes>
      <index name="id_venta" columns="id_venta"/>
      <index name="tipolibro" columns="tipolibro"/>
      <index name="tapas" columns="tapas"/>
      <index name="conservacion" columns="conservacion"/>                  
    </indexes>
    <id name="idLibro" type="integer" column="id_libro">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="codigo" type="string" column="codigo" length="10" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>

    <field name="titulo" type="string" column="titulo" length="100" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="isbn" type="string" column="isbn" length="20" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="autor" type="string" column="autor" length="60" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="editorial" type="string" column="editorial" length="30" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="anno" type="string" column="anno" length="6" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="precio" type="float" column="precio" precision="6" scale="2" nullable="true"/>

    <field name="notas" type="string" column="notas" length="200" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="descripcion" type="string" column="descripcion" length="500" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>    
    <field name="estanteria" type="string" column="estanteria" length="4" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="balda" type="string" column="balda" length="4" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="estatus" type="string" column="estatus" length="5" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="abebooks" type="datetime" column="abebooks" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field> 
    <field name="refabebooks" type="string" column="refabebooks" length="15" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>           
    <many-to-one field="idVenta" target-entity="Venta" fetch="LAZY">
      <join-columns>
        <join-column name="id_venta" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="tipolibro" target-entity="Tipolibro" fetch="LAZY">
      <join-columns>
        <join-column name="tipolibro" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="tapas" target-entity="Tapas" fetch="LAZY">
      <join-columns>
        <join-column name="tapas" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="conservacion" target-entity="Conservacion" fetch="LAZY">
      <join-columns>
        <join-column name="conservacion" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>    
  </entity>
</doctrine-mapping>
